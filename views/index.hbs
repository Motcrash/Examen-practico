{{> header}}
<div class="container">    
  {{#if pintores}}
  <table class="table table-dark table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Nacionalidad</th>
        <th>Corriente</th>
        <th>Imágen</th>
        <th>Ver más</th>
      </tr>
    </thead>
    <tbody>
      {{#each pintores}}
      <tr>
        <td>{{_id}}</td>
        <td>{{nombre}}</td>
        <td>{{nacionalidad}}</td>
        <td>{{corriente}}</td>\
        <td><img src="{{imagen}}" alt="Retrato" style="width: 14rem; height: 235.183;"></td>
        <td><a href="{{biografia}}" >Ver más</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{ else}}
  <h3>No hay datos para mostrar</h3>
  {{/if}}
</div>


</body>
</html>